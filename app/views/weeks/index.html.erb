<div class="page-header">
  <h1>
    Weeks
    <a href="/weeks/new" class="btn btn-lg btn-success">New Week</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "weeks_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :start_datetime, "Start datetime" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='start_datetimegteqPicker'>
                  <%= f.text_field :start_datetime_gteq, :class => "form-control", :placeholder => "Start datetime greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='start_datetimelteqPicker'>
                  <%= f.text_field :start_datetime_lteq, :class => "form-control", :placeholder => "Start datetime less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#start_datetimegteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#start_datetimelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#start_datetimegteqPicker').on("dp.change", function (e) {
                  $('#start_datetimelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#start_datetimelteqPicker').on("dp.change", function (e) {
                  $('#start_datetimegteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :end_datetime, "End datetime" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='end_datetimegteqPicker'>
                  <%= f.text_field :end_datetime_gteq, :class => "form-control", :placeholder => "End datetime greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='end_datetimelteqPicker'>
                  <%= f.text_field :end_datetime_lteq, :class => "form-control", :placeholder => "End datetime less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#end_datetimegteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#end_datetimelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#end_datetimegteqPicker').on("dp.change", function (e) {
                  $('#end_datetimelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#end_datetimelteqPicker').on("dp.change", function (e) {
                  $('#end_datetimegteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/weeks" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#weeks_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Start datetime</th>
        <th>End datetime</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @weeks.each do |week| %>
      <tr>
        <td><%= week.start_datetime %></td>
        <td><%= week.end_datetime %></td>
        <td>
          <% if week.user.present? %>
            <a href="/users/<%= week.user.id %>">
              <%= week.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/weeks/<%= week.id %>" class="btn btn-primary">Show</a>
          <a href="/weeks/<%= week.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_week/<%= week.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @weeks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
